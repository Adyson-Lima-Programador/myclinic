  <div class="row g-0"> <!-- fechado em _customer.html.erb -->
    <div class="col-md-6">
      <div class="card-body">
        <%= render @customer %>
      </div>
    </div>

    <div class="centraliza">
      <%= link_to t('links.edit'), edit_customer_path(@customer), class: "btn btn-sm btn-primary cor-customizada my-link" %>
