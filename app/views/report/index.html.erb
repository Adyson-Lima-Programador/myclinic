<h3 class="titulo">Relatórios</h3>


<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

      <div class="col">
        <div class="card shadow-sm ">
          <div class="card-header text-center my-card">
            <h5>Clientes<h5>
          </div>
          <div class="card-body text-center my-card">
            <h1> <%= @total_customers.size %> </h1>    
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card shadow-sm ">
          <div class="card-header text-center my-card">
            <h5>Profissionais<h5>
          </div>
          <div class="card-body text-center my-card">
            <h1> <%= @total_professionals.size %> </h1>    
          </div>
        </div>
      </div>

      <div class="col">
        <div class="card shadow-sm ">
          <div class="card-header text-center my-card">
            <h5>Clínicos<h5>
          </div>
          <div class="card-body text-center my-card">
            <h1> <%= @clinic_professionals.size %> </h1>    
          </div>
        </div>
      </div>

    </div>

  </div>
  <div class="container" style="margin-top: 10px;">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 g-3">
      <div class="col">
        <div class="card shadow-sm">
          <%= image_tag "charts/consultas.png", class: "card-img-top", :size => "250x250", :alt => "consultas.png" %>
        </div>
      </div>

      <div class="col">
        <div class="card shadow-sm">
          <%= image_tag "charts/clientes.png", class: "card-img-top", :size => "250x250", :alt => "consultas.png" %>
        </div>
      </div>
    </div>
        
  </div> 

</div>   

